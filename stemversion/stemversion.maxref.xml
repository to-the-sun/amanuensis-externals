<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<?xml-stylesheet devhelp="true" type="text/xsl" href="pb-patcher.xsl"?>
<c74object name="stemversion" module="max" category="Utility">
	<digest>Generates a timestamp-based version string</digest>
	<description>The `stemversion` object outputs a formatted string based on the current system time, useful for versioning exported stems or projects.</description>
	<!--METADATA-->
	<metadatalist>
		<metadata name="author">Jules</metadata>
		<metadata name="tag">Utility</metadata>
	</metadatalist>
	<!--INLETS-->
	<inletlist>
		<inlet id="1" type="bang">
			<digest>Inlet 1: Trigger</digest>
			<description>A bang message triggers the output of the current timestamp version string.</description>
		</inlet>
	</inletlist>
	<!--OUTLETS-->
	<outletlist>
		<outlet id="1" type="symbol">
			<digest>Outlet 1: Version string</digest>
			<description>Outputs the timestamp string, e.g., [2025-12-8-15-16-16].</description>
		</outlet>
		<outlet id="2" type="anything">
			<digest>Outlet 2: Verbose Logging (Optional)</digest>
			<description>If the verbose attribute is enabled, this outlet provides status messages.</description>
		</outlet>
	</outletlist>
	<!--ARGUMENTS-->
	<objarglist />
	<!--MESSAGES-->
	<methodlist>
		<method name="bang">
			<digest>Generate version string</digest>
		</method>
	</methodlist>
	<!--ATTRIBUTES-->
	<attributelist>
		<attribute name="verbose" get="1" set="1" type="long" size="1">
			<digest>Enable Verbose Logging</digest>
			<description>When enabled (1), creates an additional outlet for status information.</description>
			<attributelist>
				<attribute name="style" get="1" set="1" type="symbol" size="1" value="onoff" />
			</attributelist>
		</attribute>
	</attributelist>
	<!--SEEALSO-->
	<seealsolist>
		<seealso name="createproject" />
	</seealsolist>
</c74object>
